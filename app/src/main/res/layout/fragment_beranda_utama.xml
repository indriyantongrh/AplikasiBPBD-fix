<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Beranda.BerandaUtama">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@color/colorlogo">

                <ImageView
                    android:id="@+id/logobpbd"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logobpbd" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_toEndOf="@id/logobpbd"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/colorputih"
                    android:text="BADAN PENANGGULANGAN BENCANA KOTA SEMARANG"
                    android:textStyle="bold" />

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/layoutbtnlapor"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_below="@+id/toolbar">
                <android.support.v7.widget.CardView
                    android:id="@+id/btn_berita3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="86dp"
                            android:src="@drawable/lapor"/>

                        <TextView
                            android:id="@+id/text13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                           android:layout_below="@+id/imageView13"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:text="LAPOR BPBD"
                            android:textColor="#000" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@color/colorputih"
                    android:textAlignment="center"
                    android:src="@drawable/callreport"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/menubaris1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/layoutbtnlapor"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp">
                -----------------Card masakan pedas

                <android.support.v7.widget.CardView
                    android:id="@+id/btn_berita"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@drawable/berita"/>

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:text="Berita BPBD"
                            android:textColor="#000" />

                        <View
                            android:id="@+id/View1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/text1"
                            android:background="#949494" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                -----------------Card olahan daging
                <android.support.v7.widget.CardView
                    android:id="@+id/btn_kosong1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@drawable/cuaca"/>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="Perkiraan Cuasa"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="13dp" />

                        <View
                            android:id="@+id/View2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/text2"
                            android:background="#949494" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                -----------------Card sayur
                <android.support.v7.widget.CardView
                    android:id="@+id/btn_kosong2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/peringatandini"/>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:text="Peringatan Dini"
                            android:textColor="#000" />

                        <View
                            android:id="@+id/View3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/text3"
                            android:background="#949494" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/menubaris2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/menubaris1"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp">
                -----------------Card masakan pedas

                <android.support.v7.widget.CardView
                    android:id="@+id/btn_kosong4"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@drawable/bukusaku"/>

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Buku Saku"
                            android:textSize="13dp"
                            android:textColor="#000" />

                        <View
                            android:id="@+id/View4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/text4"
                            android:background="#949494" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                -----------------Card olahan daging
                <android.support.v7.widget.CardView
                    android:id="@+id/btn_kosong5"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@drawable/statistik"/>

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="Data Bencana"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="13dp"
                             />

                        <View
                            android:id="@+id/View5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/text5"
                            android:background="#949494" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                -----------------Card sayur

                <android.support.v7.widget.CardView
                    android:id="@+id/btn_btnkosong6"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/tb"/>

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="BPBD TV"
                            android:textSize="13dp"
                            android:textColor="#000" />

                        <View
                            android:id="@+id/View6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/text6"
                            android:background="#949494" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutbtnlapor1"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_below="@+id/menubaris2">
                <android.support.v7.widget.CardView
                    android:id="@+id/btn_berita31"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView131"
                            android:paddingTop="10dp"
                            android:paddingBottom="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:src="@drawable/whatsapp"/>

                        <TextView
                            android:id="@+id/text131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView131"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:paddingBottom="10dp"
                            android:text="CHAT WHATAPPS"
                            android:textColor="#000" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@color/colorputih"
                    android:textAlignment="center"
                    android:src="@drawable/whatsapp"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>